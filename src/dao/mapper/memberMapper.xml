<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.MemberDao">

	<insert id="insertMember" parameterType="member">
		insert into member 
		(m_num, m_id, m_pw, m_name)
		values (#{mNum}, #{mID}, #{mPW}, #{mName})
	</insert>
	
	<select id="selectMember" parameterType="int" resultMap="memberMap">
		select * 
		from member
		where m_num=#{mNum}
	</select>

	<select id="selectMemberByMID" parameterType="String" resultMap="memberMap">
		select * 
		from member
		where m_id=#{mID}
	</select>	
	
	<insert id="insertAuthority" parameterType="member">
		insert into authority 
		(m_num, authority)
		values (#{mNum}, 'ROLE_USER')
	</insert>

	<select id="selectAuthoritiesByMNum" parameterType="int" resultMap="memberMap">
		select authority
		from authority
		where m_Num=#{mNum}
	</select>	
	
	<resultMap type="member" id="memberMap">
		<result column="m_num" property="mNum"/>
		<result column="m_id" property="mID"/>
		<result column="m_pw" property="mPW"/>
		<result column="m_name" property="mName"/>
	</resultMap>
</mapper>
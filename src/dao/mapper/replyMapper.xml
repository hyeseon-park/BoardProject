<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.ReplyDao">

	<insert id="insertReply" parameterType="reply">
		<selectKey order="BEFORE" keyProperty="rNum" resultType="int">
			select reply_seq.nextval from dual
		</selectKey>
		insert into reply (rNum, rName, rPass, rContent, bNum)
		values (#{rNum}, #{rName}, #{rPass}, #{rContent}, #{bNum})
	</insert>
	
	<update id="updateReply" parameterType="reply">
		update reply
		set rName=#{rName}, rPass=#{rPass}, rContent=#{rContent}
		where rNum=#{rNum}
	</update>
	
	<delete id="deleteReply" parameterType="int">
		delete from reply
		where rNum=#{rNum}
	</delete>
	
	<select id="selectReplyByRNum" parameterType="int" resultType="reply">
		select * 
		from reply
		where rNum=#{rNum} 
	</select>
	
	<select id="selectRepliesByBNum" parameterType="int" resultType="reply">
		select * 
		from reply
		where bNum=#{bNum} 
	</select>
	
</mapper>